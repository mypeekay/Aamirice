<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorAccent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?colorAccent">

                <TextView
                    android:id="@+id/tv_one"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="?colorAccent"
                    android:gravity="center"
                    android:text="M"
                    android:textColor="#fff"
                    android:textSize="56dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_musictitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Music Name"
                    android:textColor="?colorAccent"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/seek_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_time_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="00:00" />

                    <TextView
                        android:id="@+id/tv_time_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="00:00" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_left"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:backgroundTint="?colorAccent"
                        android:scaleType="centerInside"
                        android:src="@drawable/aw9" />

                    <ImageButton
                        android:id="@+id/btn_star"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:backgroundTint="?colorAccent"
                        android:scaleType="centerInside"
                        android:src="@drawable/aw8" />

                    <ImageButton
                        android:id="@+id/btn_right"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:backgroundTint="?colorAccent"
                        android:scaleType="centerInside"
                        android:src="@drawable/aw6" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_tips_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="加载需等待，一首歌约消耗3M流量        简易音乐播放，播放时不要进行切换主题或频繁切歌等操作~        以下歌曲来自网易云，不保证在网易云删除音乐时仍然有效"
        android:textColor="#fff" />

    <ListView
        android:id="@+id/lv_songs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#33ffffff"
        android:scrollbars="none"></ListView>

</LinearLayout>